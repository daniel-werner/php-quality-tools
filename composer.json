{
    "name": "daniel-werner/php-quality-tools",
    "description": "Opinionated package for easy install php quality tools with a reasonable default setup",
    "keywords": [
        "daniel-werner",
        "php-quality-tools"
    ],
    "homepage": "https://github.com/daniel-werner/php-quality-tools",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Daniel Werner",
            "email": "vernerd@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpmd/phpmd": "^2.7",
        "phpstan/phpstan": "^0.11.16",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "require-dev": {
        "liip/rmt": "^1.5",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "DanielWerner\\PhpQualityTools\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "DanielWerner\\PhpQualityTools\\Tests\\": "tests"
        }
    },
    "bin": [
        "bin/phpqt-install"
    ],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "inspect": [
            "phpcs src",
            "phpstan analyze src"
        ],
        "inspect-fix": [
            "php-cs-fixer fix src",
            "phpcbf src"
        ],
        "insights": "phpmd src text phpmd.xml"
    },
    "config": {
        "sort-packages": true
    }
}